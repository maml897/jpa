<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
	version="1.0">

	<entity class="model.Pig" access="FIELD">
		<table name="t_pig" />
		<attributes>
			<id name="pigId">
				<column name="pigID" length="36" />
			</id>
			<basic name="name">
				<column name="name" length="20" unique="true" nullable="false" />
			</basic>
		</attributes>
	</entity>
	
	<entity class="model.Cow" access="FIELD">
		<table name="t_cow" />
		<attributes>
			<id name="cowID">
				<column name="cowID" length="36" />
			</id>
			<basic name="name">
				<column name="name" length="20" unique="true" nullable="false" />
			</basic>
		</attributes>
	</entity>
</entity-mappings> 